<body style="background-color:#fde3ff;">
    <div class="jumbotron">
        <h1>BOOK Recommendation </h1>
        <p></p>
    </div>



    <% if (true || loggedIn) {%>
        <form method="post" action="/bookList/byTitle">
            Show Books by Title:
            <input type="text" name="title" placeholder="e.g. POJOs in Action ">
            <input type="submit">
        </form>
        <br>
        <form method="post" action="/bookList/byStatus">
            Show Books by status:
            <input type="text" name="status" placeholder="e.g. PUBLISH">
            <input type="submit">
        </form>
        <br>
        <form method="post" action="/bookList/byIsbn">
            Show Books by isbn number:
            <input type="text" name="isbn" placeholder="e.g. 193398807">
            <input type="submit">
        </form>
        <br>
        <% } %>

</body>